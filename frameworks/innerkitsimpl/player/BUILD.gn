  part_name = "multimedia_media_standard"
  subsystem_name = "multimedia"
}

ohos_source_set("hstmediatest_source") {
  sources = [ "//foundation/multimedia/media_standard/interfaces/innerkits/native/test/playerTest.cpp" ]

  external_deps = [ "ipc:ipc_core" ]

  configs = [ ":hstmedia_config" ]

  deps = [
    "//foundation/graphic/standard:libsurface",
    "//foundation/graphic/standard:libwms_client",
  ]
}

ohos_executable("hstmediatest") {
  install_enable = false
  deps = [
    ":hstmedia",
    ":hstmediatest_source",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits:libhilog",
    "//foundation/graphic/standard:libsurface",
    "//foundation/graphic/standard:libwms_client",
    "//third_party/glib:glib",
    "//utils/native/base:utils",
  ]
  part_name = "multimedia_media_standard"
  subsystem_name = "multimedia"
}
