import("//build/ohos.gni")

SDK_LIB_DIR = rebase_path("//device/hisilicon/hispark_taurus/sdk_linux/soc/lib",
                          root_build_dir)
AUDIO_LIB_DIR = rebase_path(
        "//device/hisilicon/hardware/media/hal/audio/hi3516dv300/llvm/ext/libs",
        root_build_dir)
COMMON_LIB_DIR = rebase_path(
        "//device/hisilicon/hardware/media/hal/common/hi3516dv300/llvm/ohos/libs",
        root_build_dir)

group("hst_interfaces_packages") {
  deps = [
    ":hstmedia",
    ":hstmediatest",
  ]
}

config("hstmedia_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "./",
    "./include",
    "//foundation/multimedia/media_standard/interfaces/innerkits/native/include",
    "//third_party/gstreamer/gstreamer",
    "//third_party/gstreamer/gstreamer/libs",
    "//third_party/gstreamer/gstplugins_base",
    "//third_party/gstreamer/gstplugins_base/gst-libs",
    "//third_party/gstreamer/gstplugins_bad/gst-libs",
    "//third_party/glib/glib",
    "//third_party/glib",
    "//third_party/glib/gmodule",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
    "//foundation/multimedia/media_lite/hals/camera_lite",
    "//drivers/hdf/interfaces/display/include",
    "//drivers/peripheral/audio/interfaces/include",
    "//drivers/peripheral/display/interfaces/include",
    "//foundation/graphic/standard/utils/include",
    "//utils/native/base/include",
    "//third_party/bounds_checking_function/include",
    "//foundation/graphic/standard/window_manager/include",
    "//device/hisilicon/hispark_taurus/sdk_linux/soc/src/mpp/cbb/include",
    "//device/hisilicon/hispark_taurus/sdk_linux/soc/src/osal/include",
    "//device/hisilicon/hispark_taurus/sdk_linux/soc/src/mpp/cbb/init/include/linux",
    "//device/hisilicon/hispark_taurus/sdk_linux/soc/src/mpp/cbb/based/arch/hi3516cv500/include/hi3516cv500",
  ]

  cflags = [
    "-Wall",
    "-Werror",
  ]
}

ohos_source_set("hstmedia_source") {
  sources = [
    "src/audio_renderer_sink.cpp",
    "src/player.cpp",
    "src/volume_control.cpp",
  ]

  external_deps = [
    "ipc:ipc_core",
    "multimedia_audio_standard:audio_client",
  ]

  configs = [ ":hstmedia_config" ]

  deps = [ "//foundation/graphic/standard:libsurface" ]
}

ohos_shared_library("hstmedia") {
  install_enable = true

  deps = [
    ":hstmedia_source",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits:libhilog",
    "//device/hisilicon/hardware:hardware_group",
    "//foundation/graphic/standard:libsurface",
    "//third_party/glib:glib",
    "//third_party/glib:gmodule",
    "//third_party/glib:gobject",
    "//third_party/gstreamer/gstplugins_bad:gstplayer",
    "//third_party/gstreamer/gstplugins_base:gstapp",
    "//third_party/gstreamer/gstplugins_base:gstaudio",
    "//third_party/gstreamer/gstplugins_base:gstvideo",
    "//third_party/gstreamer/gstreamer:gstbase",
    "//third_party/gstreamer/gstreamer:gstreamer",
    "//utils/native/base:utils",
  ]

  ldflags = [
    "-L${SDK_LIB_DIR}",
    "-L${AUDIO_LIB_DIR}",
    "-L${COMMON_LIB_DIR}",
    "-lsdk",
    "-laudio_hw",
