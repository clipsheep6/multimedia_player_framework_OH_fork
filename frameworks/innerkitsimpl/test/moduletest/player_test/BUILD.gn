import("//build/test.gni")

module_output_path = "media_standard/player"

group("moduletest") {
  testonly = true

  deps = [ ":player_module_test" ]
}

ohos_moduletest("player_module_test") {
  module_out_path = module_output_path
  include_dirs = [
    "./include",
    "//foundation/multimedia/media_standard/interfaces/innerkits/native/include",
    "//third_party/gstreamer/gstreamer",
    "//third_party/glib",
    "//third_party/glib/glib",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
  ]

  sources = [ "src/playerModuleTest.cpp" ]

  deps = [
    "//base/hiviewdfx/hilog/interfaces/native/innerkits:libhilog",
    "//foundation/graphic/standard:libsurface",
    "//foundation/graphic/standard:libwms_client",
    "//foundation/multimedia/media_standard/frameworks/innerkitsimpl/player:hstmedia",
    "//third_party/glib:glib",
    "//third_party/gstreamer/gstreamer:gstreamer",
  ]

  external_deps = [
    "ipc:ipc_core",
    "multimedia_audio_standard:audio_client",
  ]
}
